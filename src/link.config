MEMORY {
  LOWMEM:
    start = $0000
    size  = $11ff
    fill  = no;
  INIT: 
    start = $11ff 
    size = $0e01
    fill = yes;
  RAM:  
    start = $2000
    size = $8000;
  HIRAM:
    start = $a000
    size = $2000;

  MACRO:
    start = $a000
    size = $2000;

  FTXT:
    start = $b000
    size = $1000;

  SAVESCR:
    start = $2100
    size = $5f00;

  UNIVERSAL_IRQ:
    start = $33c
    size  = $40;
}

SEGMENTS {
	# all banks
	BANKCODE: load = RAM, define = yes;
	BSS:      load = HIRAM, type = bss, define = yes;

	# bank $01
	DEBUGGER:  load = RAM, type=rw, define = yes;
	CODE:   load = RAM, type = ro;
	RODATA: load = RAM, type = ro;
	SETUP:  load = INIT;
	DATA:   load = INIT, run = HIRAM, type = rw, define = yes;
	IRQ:    load = INIT, run = UNIVERSAL_IRQ, type = ro, define = yes;

	# Bank $05
	# SAVESCR resides above the screen column backups (at $a000) 
	SAVESCR: load = INIT, run = SAVESCR, type = ro, define = yes;
	SAVESCR_BSS: load = SAVESCR, type = bss;

	# bank $0e
	FASTTEXT: load = INIT, run = FTXT, type = ro, define = yes;
	FASTTEXT_BSS: load = FTXT, type = bss;
	MACROCODE: load = INIT, run = MACRO, type = ro, define = yes;
	MACROBSS: load = MACRO, type = bss;
}
